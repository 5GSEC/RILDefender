            app:title="@string/sms_whitelist"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>


    <Preference
        app:key="sms_history"
        app:title="@string/sms_history"
        app:useSimpleSummaryProvider="true" />

    <Preference
        app:key="update_yaml"
        app:title="Update YAML Attack Signature"
        app:useSimpleSummaryProvider="true" />

</PreferenceScreen>