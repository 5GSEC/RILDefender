<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--    silent sms-->
    <PreferenceCategory app:title="@string/silent_sms_header">

        <ListPreference
            app:defaultValue="Allow"
            app:entries="@array/switch_entries"
            app:entryValues="@array/switch_entries"
            app:key="silent_sms"
            app:title="@string/security_level"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <!--    flash sms-->
    <PreferenceCategory app:title="@string/flash_sms_header">

        <ListPreference
            app:defaultValue="Allow"
